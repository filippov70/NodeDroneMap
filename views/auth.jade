doctype html

html
    title Аутентификация
    link(rel='stylesheet', href='/css/auth.css')
    meta(name="robots", content="noindex,nofollow")
    block content
      h1= title
      div(class="demo")
        h1 Авторизация
        div(class="auth-form")
          #error
            if(error.length > 0)
              div(class="error-msg")= error
          form(action="/auth" method="post")
            div
             input(type="text" name="username" class="input user" placeholder="пользователь")
            div
             input(type="password" name="password" class="input password" placeholder="пароль")
            div(class="buttons")
             button(type="submit") Войти